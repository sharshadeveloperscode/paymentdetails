                cache: false,
                //async: false,
                success: function (data) {
                    var pieChartCanvas = $("#pieChart").get(0).getContext("2d");
                    var pieChart = new Chart(pieChartCanvas);
                    var result = [];
                    var colors = ["#f56954", "#00a65a", "#f39c12", "#00c0ef", "#3c8dbc"];
                    var highlight = ["#f56954", "#00a65a", "#f39c12", "#00c0ef", "#3c8dbc"];
