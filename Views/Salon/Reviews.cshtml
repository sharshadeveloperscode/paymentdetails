                        data += '<div class="col-md-6 ">'
                        data += '<i style="top:10px;margin-left:-7px"></i>'
                        data += '<div class="caption jq-ry-container" style="margin-top:-14px;">'
                        data += '<div class="caption rateYo" readonly id="salonrating' + json[i].SalonReviewsId + '">'
                        data += '</div>'
                        data += '</div>'
                        data += '</div>'
