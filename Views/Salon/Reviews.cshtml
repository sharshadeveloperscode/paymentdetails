                        $('#tblBillings').append(tr);
                        ratings(json[i].OverallSatisfaction, json[i].SalonReviewsId);
                    }
                    $('#tblBillings').DataTable({

                        bsort: false,
                        dom: 'Bfrtip',
                        buttons: [
                             'excel', 'pdf'
